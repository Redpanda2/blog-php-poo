{% extends 'layouts/admin_layout.html.twig' %}

{% block title %}{{ parent() }} - Admin{% endblock %}

{% block body %}
    <h1>Les articles</h1>
{#    {{ dump(posts) }}#}
    <table class="table table-striped table-hover">
        <thead>
            <th>#</th>
            <th>Titre</th>
            <th>Publi√© le</th>
            <th>Par</th>
            <th>Mis a jour le</th>
            <th>Actions</th>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.createdAt|date("d/m/Y") }}</td>
                <td>{{ post.idUser }}</td>
                <td>{{ post.updatedAt|date("d/m/Y") }}</td>
                <td>
                    <a href="/secadmin/{{ post.id }}/post-update" class="btn btn-warning">Modifier</a>
                    <a href="" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}