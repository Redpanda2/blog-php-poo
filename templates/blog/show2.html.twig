{% extends 'layouts/main.html.twig' %}


{% block title %} {{ post.title }} - {{ parent() }}{% endblock %}

{% block body %}

    <h1>{{ post.title }}</h1>
    {% for tag in post.tags %}
    <small class="badge bg-success">{{ tag.name }}</small>
    {% endfor %}

    {#    {{ post.getAuthorName() }}#}
    <p>{{ post.content }}</p>
{#    {{ dump(post.comments) }}#}

    <h2>Commentaires</h2>

{#    <form action="/blog/{{ article.slug }}/{{ article.id }}/comment" method="post">#}
    <form action="/blog/{{ post.id }}/comment" method="post">
        <div class="mb-3 col-sm-4">
            <label for="username" class="form-label">Nom d'utilisateur</label>
            <input type="text" class="form-control {{ commentModel.hasError('username') ? ' is-invalid' : '' }}" id="username" name="username" value = "{{ commentModel.username ?? '' }}" required>
            <div id="validationServerUsernameFeedback" class="invalid-feedback">
                {{ commentModel.getFirstError('username') }}
            </div>
        </div>
        <div class="mb-3 col-sm-4">
            <label for="content" class="form-label">Contenu</label>
            <textarea class="form-control {{ comment.hasError('content') ? ' is-invalid' : '' }}" id="content" name="content">{{ comment.content ?? '' }}</textarea>
            <div id="validationFirstname" class="invalid-feedback">
                {{ comment.getFirstError('content') }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>

    {% for comment in post.comments %}
        <div class="card mb-3">
            <div class="card-body">
                <p>{{ comment.content }}</p>
                <p><small>Par</small> {{ comment.username }} <small class="">Publié le {{ comment.createdAt|date("d/m/Y à h:i") }}</small></p>
            </div>
        </div>
    {% endfor %}

{% endblock %}
