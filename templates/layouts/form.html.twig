{% macro inputLongEmail (name, label, options = []) %}
<div class="col-12">
    <label for="{{ name }}" class="form-label">{{ label }}</label>
    <input type="email" class="form-control {{ options.class }}" id="{{ name }}" name="{{ name }}" required>
    <div id="validationServerUsernameFeedback" class="invalid-feedback">
        {{ message }}
    </div>
</div>

{% endmacro %}

