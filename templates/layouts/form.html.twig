{% macro inputGenderRadio(name, label) %}
    <div class="col-sm-3">
        <label for="{{ name }}" class="form-label">{{ label }}</label>
        <fieldset class="row mb-3">
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="{{ name }}" id="male" value="male">
                    <label class="form-check-label" for="male">
                        Homme
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="{{ name }}" id="female" value="female">
                    <label class="form-check-label" for="female">
                        Femme
                    </label>
                </div>
            </div>
        </fieldset>
    </div>

{% endmacro %}

