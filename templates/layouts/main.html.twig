    <link rel="stylesheet" href="../css/tiny-slider.css" />
    <link rel="stylesheet" href="../css/glightbox.min.css" />
    <link rel="stylesheet" href="../css/main.css" />


    <title>{% block title %}Blog{% endblock %}</title>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">Les articles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact-us">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
{#                    {{ dump(session) }}#}
                    {% if session['auth'] is defined and not session['auth']['id'] is empty%}
                    {% if session['auth']['admin'] is defined and session['auth']['admin'] == 1%}
                        <li class="nav-item">
                            <a class="nav-link" href="/secadmin">Administration</a>
                        </li>
                    {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="/profil">Profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Deconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Connexion</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/register">Inscription</a>
                        </li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>
</div>
{% block navbar %}{% endblock %}

{% block body %}{% endblock %}

